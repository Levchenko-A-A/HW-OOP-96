<Window x:Class="HW_OOP_96.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_OOP_96"
        xmlns:vm="clr-namespace:HW_OOP_96.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
    <DataGrid Grid.Row = "0" ItemsSource = "{Binding Products}" AutoGenerateColumns="False" >
        <DataGrid.Columns >
            <DataGridTextColumn Header = "Модель" Binding = "{Binding Id}"
                                Width="12*"/>
            <DataGridTextColumn Header = "Название" Binding = "{Binding Name}"
                                Width="20*"/>
            <DataGridTextColumn Header = "Описание" Binding = "{Binding Description}"
                                Width="50*"/>
            <DataGridTextColumn Header = "Цена" Binding = "{Binding Price}" 
                                Width="10*"/>
            <DataGridTextColumn Header = "Количество" Binding = "{Binding Quantity}"
                                Width="15*"/>
        </DataGrid.Columns>
        <DataGrid.DataContext >
            <vm:GridViewViewModel/>
        </DataGrid.DataContext >
    </DataGrid >
        <Button Grid.Row="1" Content="Сохранить в CSV" 
                Margin="250,10" Command="{Binding SaveToCSV}"/>
    </Grid >
</Window>
